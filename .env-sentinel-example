# Application Configuration
# @section: Application
# @description: Core application settings and behavior
APP_NAME=required|desc:"Application name displayed in logs and UI"|example:"MyAwesomeApp"
APP_ENV=required|enum:development,staging,production|desc:"Application environment mode"|example:"production"
APP_DEBUG=boolean|desc:"Enable debug mode with verbose logging"|default:"false"
APP_URL=required|desc:"Base URL of the application"|example:"https://myapp.com"
APP_PORT=number|min:1|max:65535|desc:"Port number for the application server"|default:"3000"
APP_FULL_URL=desc:"Complete application URL with port"|example:"${APP_URL}:${APP_PORT}"

# Database Configuration
# @section: Database
# @description: Database connection and configuration settings
DB_CONNECTION=required|enum:mysql,postgresql,sqlite|desc:"Database driver to use"|example:"mysql"
DB_HOST=required|desc:"Database server hostname or IP address"|example:"localhost"
DB_PORT=required|number|min:1|max:65535|desc:"Database server port number"|example:"3306"
DB_DATABASE=required|desc:"Name of the database to connect to"|example:"myapp_production"
DB_USERNAME=required|desc:"Database username for authentication"|example:"app_user"
DB_PASSWORD=required|secure|desc:"Database password (keep secure!)"
DB_POOL_MIN=number|min:1|desc:"Minimum number of connections in pool"|default:"2"
DB_POOL_MAX=number|min:1|max:100|desc:"Maximum number of connections in pool"|default:"10"
DB_CONNECTION_STRING=desc:"Complete database connection string"|example:"${DB_CONNECTION}://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}"

# Cache Configuration
# @section: Cache
# @description: Caching system configuration
CACHE_DRIVER=required|enum:file,redis,memcached|desc:"Cache storage driver"|example:"redis"
CACHE_PREFIX=desc:"Prefix for all cache keys"|default:"myapp:"
CACHE_TTL=number|min:1|desc:"Default cache time-to-live in seconds"|default:"3600"

# Redis Configuration
# @section: Redis
# @description: Redis server connection settings
REDIS_HOST=desc:"Redis server hostname"|default:"127.0.0.1"
REDIS_PORT=number|min:1|max:65535|desc:"Redis server port"|default:"6379"
REDIS_PASSWORD=secure|desc:"Redis authentication password"
REDIS_DB=number|min:0|max:15|desc:"Redis database number"|default:"0"

# Email Configuration
# @section: Email
# @description: Email service configuration
MAIL_MAILER=required|enum:smtp,sendmail,mailgun,ses|desc:"Email delivery method"|example:"smtp"
MAIL_HOST=desc:"SMTP server hostname"|example:"smtp.gmail.com"
MAIL_PORT=number|min:1|max:65535|desc:"SMTP server port"|default:"587"
MAIL_USERNAME=desc:"SMTP authentication username"
MAIL_PASSWORD=secure|desc:"SMTP authentication password"
MAIL_ENCRYPTION=enum:tls,ssl,none|desc:"SMTP encryption method"|default:"tls"
MAIL_FROM_ADDRESS=required|desc:"Default sender email address"|example:"noreply@myapp.com"
MAIL_FROM_NAME=desc:"Default sender name"|example:"MyApp Team"
MAIL_FROM_FULL=desc:"Full sender address with name"|example:"${MAIL_FROM_NAME} <${MAIL_FROM_ADDRESS}>"

# Authentication & Security
# @section: Security
# @description: Authentication and security settings
JWT_SECRET=required|secure|desc:"Secret key for JWT token signing (keep secure!)"
JWT_EXPIRES_IN=desc:"JWT token expiration time"|default:"24h"
SESSION_DRIVER=required|enum:file,redis,database|desc:"Session storage driver"|example:"redis"
SESSION_LIFETIME=number|min:1|desc:"Session lifetime in minutes"|default:"120"
SESSION_ENCRYPT=boolean|desc:"Encrypt session data"|default:"true"
BCRYPT_ROUNDS=number|min:4|max:31|desc:"Number of bcrypt hashing rounds"|default:"12"

# File Storage
# @section: Storage
# @description: File storage and upload configuration
FILESYSTEM_DRIVER=required|enum:local,s3,gcs|desc:"File storage driver"|example:"local"
AWS_ACCESS_KEY_ID=desc:"AWS access key for S3 storage"
AWS_SECRET_ACCESS_KEY=secure|desc:"AWS secret key for S3 storage"
AWS_DEFAULT_REGION=desc:"AWS region for S3 bucket"|default:"us-east-1"
AWS_BUCKET=desc:"S3 bucket name for file storage"
AWS_BUCKET_URL=desc:"Full S3 bucket URL"|example:"https://${AWS_BUCKET}.s3.${AWS_DEFAULT_REGION}.amazonaws.com"
UPLOAD_MAX_SIZE=number|min:1|desc:"Maximum file upload size in MB"|default:"10"
ALLOWED_EXTENSIONS=desc:"Comma-separated list of allowed file extensions"|default:"jpg,jpeg,png,pdf,doc,docx"

# Monitoring & Logging
# @section: Monitoring
# @description: Application monitoring and logging settings
LOG_CHANNEL=required|enum:stack,single,daily,slack|desc:"Log channel driver"|example:"stack"
LOG_LEVEL=enum:emergency,alert,critical,error,warning,notice,info,debug|desc:"Minimum log level"|default:"info"
SENTRY_DSN=secure|desc:"Sentry error tracking DSN"
NEW_RELIC_LICENSE_KEY=secure|desc:"New Relic license key for APM"

# External APIs
# @section: External APIs
# @description: Third-party service integrations
STRIPE_PUBLIC_KEY=desc:"Stripe publishable key for payments"
STRIPE_SECRET_KEY=secure|desc:"Stripe secret key for payments"
GOOGLE_MAPS_API_KEY=secure|desc:"Google Maps API key for geocoding"
TWILIO_ACCOUNT_SID=secure|desc:"Twilio account SID for SMS"
TWILIO_AUTH_TOKEN=secure|desc:"Twilio auth token for SMS"

# Development & Testing
# @section: Development
# @description: Development and testing specific settings
TELESCOPE_ENABLED=boolean|desc:"Enable Laravel Telescope debugging tool"|default:"false"
HORIZON_ENABLED=boolean|desc:"Enable Laravel Horizon queue monitoring"|default:"false"
MOCK_EXTERNAL_APIS=boolean|desc:"Mock external API calls in development"|default:"true"
