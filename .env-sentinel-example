# ============================================================================
# @section Application
# @description Core application settings and behavior.
# These variables control the fundamental application configuration
# and must be properly set before deployment.
# ============================================================================

# @var Application name displayed in logs and UI
# @example MyAwesomeApp
APP_NAME=required

# @var Application environment mode
# @example production
APP_ENV=required|enum:development,staging,production

# @var Enable debug mode with verbose logging
APP_DEBUG=boolean|default:"false"

# @var Base URL of the application
# @example https://myapp.com
APP_URL=required

# @var Port number for the application server
APP_PORT=number|min:1|max:65535|default:"3000"

# @var Complete application URL with port
# @example ${APP_URL}:${APP_PORT}
APP_FULL_URL=

# ============================================================================
# @section Database
# @description Database connection and configuration settings.
# All database-related variables including connection pooling.
# Make sure to use secure passwords and proper SSL configuration in production.
# ============================================================================

# @var Database driver to use.
# Supported drivers: mysql, postgresql, sqlite
# @example mysql
DB_CONNECTION=required|enum:mysql,postgresql,sqlite

# @var Database server hostname or IP address
# @example localhost
DB_HOST=required

# @var Database server port number
# @example 3306
DB_PORT=required|number|min:1|max:65535

# @var Name of the database to connect to
# @example myapp_production
DB_DATABASE=required

# @var Database username for authentication
# @example app_user
DB_USERNAME=required

# @var Database password (keep secure!)
DB_PASSWORD=required|secure

# @var Minimum number of connections in pool
DB_POOL_MIN=number|min:1|default:"2"

# @var Maximum number of connections in pool
DB_POOL_MAX=number|min:1|max:100|default:"10"

# @var Complete database connection string
# @example ${DB_CONNECTION}://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}
DB_CONNECTION_STRING=

# ============================================================================
# @section Cache
# @description Caching system configuration
# ============================================================================

# @var Cache storage driver
# @example redis
CACHE_DRIVER=required|enum:file,redis,memcached

# @var Prefix for all cache keys
CACHE_PREFIX=default:"myapp:"

# @var Default cache time-to-live in seconds
CACHE_TTL=number|min:1|default:"3600"

# ============================================================================
# @section Redis
# @description Redis server connection settings
# ============================================================================

# @var Redis server hostname
REDIS_HOST=default:"127.0.0.1"

# @var Redis server port
REDIS_PORT=number|min:1|max:65535|default:"6379"

# @var Redis authentication password
REDIS_PASSWORD=secure

# @var Redis database number
REDIS_DB=number|min:0|max:15|default:"0"

# ============================================================================
# @section Email
# @description Email service configuration
# ============================================================================

# @var Email delivery method
# @example smtp
MAIL_MAILER=required|enum:smtp,sendmail,mailgun,ses

# @var SMTP server hostname
# @example smtp.gmail.com
MAIL_HOST=

# @var SMTP server port
MAIL_PORT=number|min:1|max:65535|default:"587"

# @var SMTP authentication username
MAIL_USERNAME=

# @var SMTP authentication password
MAIL_PASSWORD=secure

# @var SMTP encryption method
MAIL_ENCRYPTION=enum:tls,ssl,none|default:"tls"

# @var Default sender email address
# @example noreply@myapp.com
MAIL_FROM_ADDRESS=required

# @var Default sender name
# @example MyApp Team
MAIL_FROM_NAME=

# @var Full sender address with name
# @example ${MAIL_FROM_NAME} <${MAIL_FROM_ADDRESS}>
MAIL_FROM_FULL=

# ============================================================================
# @section Security
# @description Authentication and security settings.
# Critical security configuration for user authentication and session management.
# All secret values must be kept secure and rotated regularly.
# ============================================================================

# @var Secret key for JWT token signing (keep secure!).
# Must be at least 32 characters long with high entropy.
# Never commit this value to version control.
JWT_SECRET=required|secure|min:32

# @var JWT token expiration time
JWT_EXPIRES_IN=default:"24h"

# @var Session storage driver
# @example redis
SESSION_DRIVER=required|enum:file,redis,database

# @var Session lifetime in minutes
SESSION_LIFETIME=number|min:1|default:"120"

# @var Encrypt session data
SESSION_ENCRYPT=boolean|default:"true"

# @var Number of bcrypt hashing rounds
BCRYPT_ROUNDS=number|min:4|max:31|default:"12"

# ============================================================================
# @section Storage
# @description File storage and upload configuration
# ============================================================================

# @var File storage driver
# @example local
FILESYSTEM_DRIVER=required|enum:local,s3,gcs

# @var AWS access key for S3 storage
AWS_ACCESS_KEY_ID=

# @var AWS secret key for S3 storage
AWS_SECRET_ACCESS_KEY=secure

# @var AWS region for S3 bucket
AWS_DEFAULT_REGION=default:"us-east-1"

# @var S3 bucket name for file storage
AWS_BUCKET=

# @var Full S3 bucket URL
# @example https://${AWS_BUCKET}.s3.${AWS_DEFAULT_REGION}.amazonaws.com
AWS_BUCKET_URL=

# @var Maximum file upload size in MB
UPLOAD_MAX_SIZE=number|min:1|default:"10"

# @var Comma-separated list of allowed file extensions
ALLOWED_EXTENSIONS=default:"jpg,jpeg,png,pdf,doc,docx"

# ============================================================================
# @section Monitoring
# @description Application monitoring and logging settings
# ============================================================================

# @var Log channel driver
# @example stack
LOG_CHANNEL=required|enum:stack,single,daily,slack

# @var Minimum log level
LOG_LEVEL=enum:emergency,alert,critical,error,warning,notice,info,debug|default:"info"

# @var Sentry error tracking DSN
SENTRY_DSN=secure

# @var New Relic license key for APM
NEW_RELIC_LICENSE_KEY=secure

# ============================================================================
# @section External APIs
# @description Third-party service integrations
# ============================================================================

# @var Stripe publishable key for payments
STRIPE_PUBLIC_KEY=

# @var Stripe secret key for payments
STRIPE_SECRET_KEY=secure

# @var Google Maps API key for geocoding
GOOGLE_MAPS_API_KEY=secure

# @var Twilio account SID for SMS
TWILIO_ACCOUNT_SID=secure

# @var Twilio auth token for SMS
TWILIO_AUTH_TOKEN=secure

# ============================================================================
# @section Development
# @description Development and testing specific settings
# ============================================================================

# @var Enable Laravel Telescope debugging tool
TELESCOPE_ENABLED=boolean|default:"false"

# @var Enable Laravel Horizon queue monitoring
HORIZON_ENABLED=boolean|default:"false"

# @var Mock external API calls in development
MOCK_EXTERNAL_APIS=boolean|default:"true"
